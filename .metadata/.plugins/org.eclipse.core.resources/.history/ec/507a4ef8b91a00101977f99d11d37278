package com.shyam;

public class ReverseArrayInPlace {
public static void main(String[] args) {
	int[] arr= {12,3,5,6,7,8};
	           //[8, 7, 6, 5, 3, 12]
}

public static void reverseArr(int[] arr) {
	
	int lIndex=0;
	int rIndex=arr.length-1;
	
	while(lIndex<rIndex) {
		int temp=arr[lIndex];
		arr[lIndex]=arr[rIndex];
		arr[rIndex]=temp;
	}
}
}
